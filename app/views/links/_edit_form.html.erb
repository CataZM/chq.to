<%= form_with(model: link, local: true) do |f| %>
    <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>
  
    <div class="field">
        <%= f.label :url %>
        <%= f.text_field :url %>
    </div>
  
    <div class="actions">
        <%= f.submit class: 'btn btn-primary' %>
    </div>
<% end %>